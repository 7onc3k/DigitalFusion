---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
const services = [
    {
        title: "Responzivní webové stránky",
        description: "Vytváříme moderní, plně responzivní webové stránky, které skvěle vypadají na všech zařízeních.",
        icon: "mdi:laptop",
        features: [
            "Optimalizace pro mobily a tablety",
            "Rychlé načítání",
            "Moderní design",
            "Uživatelsky přívětivé rozhraní"
        ]
    },
    {
        title: "E-commerce řešení",
        description: "Vyvíjíme výkonné a bezpečné e-shopy, které pomohou vašemu podnikání růst online.",
        icon: "mdi:cart",
        features: [
            "Intuitivní správa produktů",
            "Bezpečné platební brány",
            "Optimalizace pro konverze",
            "Integrace s ERP systémy"
        ]
    },
    {
        title: "Webové aplikace",
        description: "Tvoříme na míru vyvinuté webové aplikace, které zefektivní vaše podnikové procesy.",
        icon: "mdi:code-tags",
        features: [
            "Single-page aplikace (SPA)",
            "Progresivní webové aplikace (PWA)",
            "Integrace API",
            "Škálovatelná architektura"
        ]
    }
];
const processSteps = [
    { name: 'Analýza požadavků', icon: 'mdi:clipboard-text' },
    { name: 'Návrh a prototyp', icon: 'mdi:pencil-ruler' },
    { name: 'Vývoj', icon: 'mdi:code-braces' },
    { name: 'Testování', icon: 'mdi:test-tube' },
    { name: 'Nasazení', icon: 'mdi:rocket-launch' }
];
---
<Layout title="Služby - DigitalFusion">
    <h1 class="text-4xl font-bold text-center my-12 text-white">Naše služby</h1>
    <div class="services-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {services.map(service => (
            <div class="service-card bg-black rounded-lg p-8 text-center flex flex-col h-full transition-all duration-300">
                <div class="flex-grow flex flex-col items-center">
                    <div class="w-3/4 mx-auto">
                        <Icon name={service.icon} class="text-4xl text-white mb-4 mx-auto" />
                        <h2 class="text-2xl font-bold mb-4 text-white">{service.title}</h2>
                        <p class="mb-6 text-white">{service.description}</p>
                        <ul class="features-list space-y-2 mb-6 text-white">
                            {service.features.map(feature => (
                                <li class="flex items-center">
                                    <Icon name="mdi:check-circle" class="text-white mr-2" />
                                    <span class="text-left">{feature}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
                <div class="mt-4 flex justify-center">
                    <a href="#" class="inline-block w-3/4 px-6 py-3 bg-white text-black rounded-full transition-colors">Zjistit více</a>
                </div>
            </div>
        ))}
    </div>
    <section id="process" class="py-16">
        <h2 class="text-3xl font-bold text-center text-white mb-12">Náš proces vývoje</h2>
        <div class="process-steps grid grid-cols-1 sm:grid-cols-3 md:grid-cols-5 gap-8 max-w-5xl mx-auto">
            {processSteps.map((step, index) => (
                <div class="step flex flex-col items-center text-center p-4 relative">
                    <div class="icon-wrapper bg-white rounded-full p-3 mb-4 relative">
                        <Icon name={step.icon} class="text-3xl text-black" />
                        <span class="absolute -top-2 -left-2 bg-black text-white rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold">{index + 1}</span>
                    </div>
                    <h3 class="text-lg font-bold mb-2 text-white">{step.name}</h3>
                </div>
            ))}
        </div>
    </section>
    <section id="technologies" class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-12 text-center text-white">Technologie, které používáme</h2>
            <div class="tech-icons flex flex-wrap justify-center gap-12 text-white">
                <div class="tech-icon flex flex-col items-center">
                    <Icon name="mdi:language-javascript" class="text-6xl mb-2" />
                    <span>JavaScript</span>
                </div>
                <div class="tech-icon flex flex-col items-center">
                    <Icon name="mdi:shopify" class="text-6xl mb-2" />
                    <span>Shopify</span>
                </div>
                <div class="tech-icon flex flex-col items-center">
                    <Icon name="mdi:language-html5" class="text-6xl mb-2" />
                    <span>HTML</span>
                </div>
            </div>
        </div>
    </section>
    <section id="cta" class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-6 text-center text-white">Připraveni na nový web?</h2>
            <p class="mt-4 mb-8 text-center max-w-2xl mx-auto text-white">Kontaktujte nás pro nezávaznou konzultaci a zjistěte, jak vám můžeme pomoci s vaším webovým projektem.</p>
            <div class="text-center">
                <a href="/kontakt" class="inline-block px-8 py-4 bg-white text-black rounded-full transition-colors text-lg font-bold">Kontaktujte nás</a>
            </div>
        </div>
    </section>
</Layout>