---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import Button from '../components/Button.astro';

// Zde později můžeme přidat logiku pro načítání blog postů
const posts = [];
---

<Layout title="Blog - DigitalFusion">
    <main class="container mx-auto px-4 py-16">
        <h1 class="text-5xl font-bold text-center mb-16 text-white">Blog</h1>
        
        <section>
            {posts.length === 0 ? (
                <div class="text-center text-white">
                    <h2 class="text-4xl font-bold mb-8">Připravujeme obsah</h2>
                    <p class="text-lg mb-4">Připravujeme pro vás zajímavý obsah.</p>
                    <p>Sledujte nás, brzy přidáme první články.</p>
                </div>
            ) : (
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {/* Zde později přidáme zobrazení blog postů */}
                </div>
            )}
        </section>
    </main>
</Layout> 