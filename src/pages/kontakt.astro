---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Kontakt - DigitalFusion">
    <h1 class="text-4xl font-bold text-center my-8">Kontaktujte nás</h1>
    <div class="contact-container flex flex-col md:flex-row justify-between mb-8">
        <section id="contact-form" class="flex-1 p-4">
            <h2 class="text-2xl font-bold mb-4">Kontaktní formulář</h2>
            <form action="/odeslat" method="post" id="contact-form" class="space-y-4">
                <div class="form-group">
                    <label for="name" class="block mb-2">Jméno:</label>
                    <input type="text" id="name" name="name" required class="w-full p-2 border border-white bg-black text-white rounded">
                </div>
                <div class="form-group">
                    <label for="email" class="block mb-2">Email:</label>
                    <input type="email" id="email" name="email" required class="w-full p-2 border border-white bg-black text-white rounded">
                </div>
                <div class="form-group">
                    <label for="subject" class="block mb-2">Předmět:</label>
                    <select id="subject" name="subject" required class="w-full p-2 border border-white bg-black text-white rounded">
                        <option value="">Vyberte předmět</option>
                        <option value="general">Obecný dotaz</option>
                        <option value="support">Technická podpora</option>
                        <option value="sales">Obchodní oddělení</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="message" class="block mb-2">Zpráva:</label>
                    <textarea id="message" name="message" required class="w-full p-2 border border-white bg-black text-white rounded h-40"></textarea>
                </div>
                <button type="submit" class="px-4 py-2 bg-white text-black rounded hover:bg-gray-200">Odeslat</button>
            </form>
        </section>
        <section id="contact-info" class="flex-1 p-4 mt-8 md:mt-0">
            <h2 class="text-2xl font-bold mb-4">Kontaktní údaje</h2>
            <p><i class="fas fa-phone"></i> Telefon: +420 123 456 789</p>
            <p><i class="fas fa-envelope"></i> Email: info@digitalfusion.cz</p>
            <p><i class="fas fa-map-marker-alt"></i> Adresa: Ulice 123, Město, PSČ</p>
            <h3 class="text-xl font-bold mt-4">Sledujte nás</h3>
            <div class="social-links flex space-x-4 mt-2">
                <a href="#" target="_blank"><i class="fab fa-facebook text-2xl"></i></a>
                <a href="#" target="_blank"><i class="fab fa-twitter text-2xl"></i></a>
                <a href="#" target="_blank"><i class="fab fa-linkedin text-2xl"></i></a>
                <a href="#" target="_blank"><i class="fab fa-instagram text-2xl"></i></a>
            </div>
        </section>
    </div>
    <section id="map" class="py-16">
        <h2 class="text-3xl font-bold text-center mb-8">Kde nás najdete</h2>
        <div id="google-map" class="h-96 w-full"></div>
    </section>
</Layout>
<script>
    declare var google: any;
    // Skript pro validaci formuláře
    const form = document.getElementById('contact-form');
    if (form) {
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            // Zde přidejte logiku pro validaci a odeslání formuláře
            alert('Formulář byl odeslán!');
        });
    }
    // Skript pro načtení Google Maps
    function initMap() {
        if (typeof google !== 'undefined') {
            const map = new google.maps.Map(document.getElementById('google-map'), {
                center: {lat: 50.0755, lng: 14.4378}, // Praha
                zoom: 15,
                styles: [
                    {
                        elementType: "geometry",
                        stylers: [{ color: "#242f3e" }]
                    },
                    {
                        elementType: "labels.text.stroke",
                        stylers: [{ color: "#242f3e" }]
                    },
                    {
                        elementType: "labels.text.fill",
                        stylers: [{ color: "#746855" }]
                    },
                    {
                        featureType: "administrative.locality",
                        elementType: "labels.text.fill",
                        stylers: [{ color: "#d59563" }]
                    },
                    {
                        featureType: "road",
                        elementType: "geometry",
                        stylers: [{ color: "#38414e" }]
                    },
                    {
                        featureType: "road",
                        elementType: "geometry.stroke",
                        stylers: [{ color: "#212a37" }]
                    },
                    {
                        featureType: "road",
                        elementType: "labels.text.fill",
                        stylers: [{ color: "#9ca5b3" }]
                    }
                ]
            });
            const marker = new google.maps.Marker({
                position: {lat: 50.0755, lng: 14.4378},
                map: map,
                title: 'DigitalFusion'
            });
        } else {
            console.error('Google Maps API není dostupné.');
        }
    }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap"></script>