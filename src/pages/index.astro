---
import Layout from '../layouts/Layout.astro';
import { projects } from '../data/projects.js';
import { Icon } from 'astro-icon/components';
import Hero from '../components/Hero.astro';
import Button from '../components/Button.astro';
const latestProjects = projects.slice(0, 3);
const aboutFeatures = [
    { icon: 'mdi:account-group', title: 'Kdo jsme', description: 'Jsme tým expertů na webový vývoj, připraveni posunout vaše podnikání do budoucnosti. S našimi inovativními řešeními a strategickým přístupem vám pomůžeme uspět v rychle se měnícím digitálním světě.' },
    { icon: 'mdi:target', title: 'Naše mise', description: 'Naše mise je jednoduchá: Transformovat vaše vize do digitální reality a maximalizovat váš potenciál v online prostředí. S DigitalFusion získáte partnera, který rozumí vašim potřebám a pomůže vám dosáhnout vašich cílů.' },
    { icon: 'mdi:lightbulb', title: 'Inovace', description: 'Přinášíme nejnovější technologie a trendy do vašeho webového projektu. Naše inovativní přístupy vám pomohou získat konkurenční výhodu a být vždy o krok napřed.' },
    { icon: 'mdi:handshake', title: 'Partnerství', description: 'Věříme v dlouhodobou spolupráci a budování silných vztahů s našimi klienty. Jsme více než jen dodavatel - jsme váš partner na cestě k digitálnímu úspěchu.' },
];
---
<Layout title="DigitalFusion - Vaše webové řešení" noTopPadding={true}>
    <div class="flex items-center justify-center min-h-screen">
        <Hero 
            title="DigitalFusion: Vaše webová transformace začíná zde"
            subtitle="Inovativní webová řešení pro moderní podniky"
        >
            <Button href="/kontakt" size="large">Kontaktujte nás</Button>
        </Hero>
    </div>
    <section id="about-preview" class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12 text-white">O DigitalFusion</h2>
            <div class="about-features grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
                {aboutFeatures.map(feature => (
                    <div class="feature-card flex flex-col items-center p-6 rounded-lg">
                        <div class="feature-icon mb-4 flex items-center justify-center w-16 h-16">
                            <Icon name={feature.icon} class="text-4xl text-white" />
                        </div>
                        <div class="feature-content text-center">
                            <h3 class="text-xl font-bold mb-2 text-white">{feature.title}</h3>
                            <p class="text-white">{feature.description}</p>
                        </div>
                    </div>
                ))}
            </div>
            <div class="text-center">
                <Button href="/o-nas">Zjistit více o nás</Button>
            </div>
        </div>
    </section>
    <section id="services-preview" class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-8 text-white">Naše služby</h2>
            <ul class="services-list grid grid-cols-1 md:grid-cols-3 gap-8">
                <li class="text-center p-6 rounded-lg">
                    <div class="flex items-center justify-center mb-4">
                        <Icon name="mdi:laptop" class="text-5xl text-white" />
                    </div>
                    <h3 class="text-xl font-bold text-white">Webový design</h3>
                    <p class="mt-2 text-white">Moderní a responzivní webové stránky</p>
                </li>
                <li class="text-center p-6 rounded-lg">
                    <div class="flex items-center justify-center mb-4">
                        <Icon name="mdi:cart" class="text-5xl text-white" />
                    </div>
                    <h3 class="text-xl font-bold text-white">E-commerce řešení</h3>
                    <p class="mt-2 text-white">Výkonné a bezpečné e-shopy</p>
                </li>
                <li class="text-center p-6 rounded-lg">
                    <div class="flex items-center justify-center mb-4">
                        <Icon name="mdi:code-tags" class="text-5xl text-white" />
                    </div>
                    <h3 class="text-xl font-bold text-white">Webové aplikace</h3>
                    <p class="mt-2 text-white">Zakázkové webové aplikace na míru</p>
                </li>
            </ul>
            <div class="text-center mt-8">
                <Button href="/sluzby">Prozkoumat všechny služby</Button>
            </div>
        </div>
    </section>
    <section id="latest-projects" class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-8 text-white">Nejnovější projekty</h2>
            <div class="project-grid grid grid-cols-1 md:grid-cols-3 gap-8">
                {latestProjects.map(project => (
                    <div class="project-card rounded-lg overflow-hidden flex flex-col justify-between backdrop-blur-md bg-white/10 transition-all duration-300 hover:bg-white/20" data-category={project.category}>
                        <div class="p-6">
                            <h2 class="text-xl font-bold mb-2 text-white">{project.title}</h2>
                            <p class="text-white mb-4">{project.description}</p>
                            <div class="technologies flex flex-wrap">
                                {project.technologies.map(tech => (
                                    <span class="tech-tag bg-white/20 text-white px-2 py-1 rounded mr-2 mb-2 text-sm">{tech}</span>
                                ))}
                            </div>
                        </div>
                        <Button href={`/portfolio/${project.id}`} class="w-full">Zobrazit detaily</Button>
                    </div>
                ))}
            </div>
        </div>
    </section>
    <section id="contact-cta" class="py-16 text-center">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-4 text-white">Připraveni začít?</h2>
            <p class="mt-4 mb-6 text-white">Kontaktujte nás a společně vytvoříme vaše webové řešení.</p>
            <Button href="/kontakt" size="large">Kontaktujte nás</Button>
        </div>
    </section>
</Layout>