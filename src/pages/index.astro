---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Button from '../components/Button.astro';
---

<Layout title="DigitalFusion - Vaše webové řešení" noTopPadding={true}>
    <div class="flex items-center justify-center min-h-screen">
        <Hero 
            title="Tvoříme weby, které prodávají"
            subtitle="Moderní webová řešení pro váš business"
        >
            <div class="flex flex-col gap-4 items-center">
                <Button href="/kontakt" size="large">Kontaktujte nás</Button>
                <a href="/dotaznik" class="text-base underline hover:text-primary transition-colors max-w-[40%] text-center">
                    Získat konzultaci zdarma
                </a>
            </div>
        </Hero>
    </div>
</Layout>
