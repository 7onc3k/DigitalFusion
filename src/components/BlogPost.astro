---
export interface Props {
    title: string;
    slug: string;
    excerpt: string;
    date: string;
    author: string;
    category: string;
    image: string;
}

const { title, slug, excerpt, date, author, category, image } = Astro.props;
---

<article class="blog-post bg-white rounded shadow overflow-hidden transition-transform duration-300 ease-in-out hover:transform hover:-translate-y-1" data-category={category}>
    <a href={`/blog/${slug}`}>
        <img src={image} alt={title} class="blog-post-image w-full h-48 object-cover" />
        <h2 class="text-xl font-bold p-4">{title}</h2>
    </a>
    <p class="blog-post-meta flex justify-between px-4 text-sm text-gray-600">
        <span class="date">{new Date(date).toLocaleDateString('cs-CZ')}</span>
        <span class="author">Autor: {author}</span>
        <span class="category">{category}</span>
    </p>
    <p class="excerpt px-4 mb-4">{excerpt}</p>
    <a href={`/blog/${slug}`} class="read-more block px-4 py-2 bg-blue-500 text-white text-center rounded">Číst více</a>
</article>