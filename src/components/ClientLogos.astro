---
const clients = [
	{ name: "Klient 1", logo: "/images/clients/client1.png" },
	{ name: "Klient 2", logo: "/images/clients/client2.png" },
	{ name: "Klient 3", logo: "/images/clients/client3.png" },
	{ name: "Klient 4", logo: "/images/clients/client4.png" },
	{ name: "Klient 5", logo: "/images/clients/client5.png" }
];
---

<section id="client-logos" class="section py-16">
	<h2 class="text-3xl font-bold text-center">Na≈°i klienti</h2>
	<div class="logo-grid flex justify-around items-center flex-wrap mt-8">
		{clients.map(client => (
			<img src={client.logo} alt={client.name} class="client-logo max-w-[150px] max-h-[80px] m-5 filter grayscale transition-filter duration-300 ease-in-out hover:filter-none" />
		))}
	</div>
</section>