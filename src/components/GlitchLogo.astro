---
// Astro komponent pro animaci textu
---

<div class="component-container">
  <div class="animation-container">
    <div class="letter" id="D">D</div>
    <div class="letter" id="F">F</div>
    <div class="letter" id="I">I</div>
    <div class="letter" id="G">G</div>
    <div class="letter" id="I2">I</div>
    <div class="letter" id="T">T</div>
    <div class="letter" id="A">A</div>
    <div class="letter" id="L">L</div>
    <div class="letter" id="U">U</div>
    <div class="letter" id="S">S</div>
    <div class="letter" id="I3">I</div>
    <div class="letter" id="O">O</div>
    <div class="letter" id="N">N</div>
  </div>
</div>

<style>
  .component-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100%;
  }

  .animation-container {
    width: 700px;
    height: 200px;
    position: relative;
    font-family: Arial, sans-serif;
    font-size: 24px;
  }

  .letter {
    position: absolute;
    opacity: 0;
    transition: all 1s ease;
  }

  #D, #F {
    opacity: 1;
    top: 50%;
    left: 50%;
  }

  #D {
    transform: translate(-30px, -50%);
  }

  #F {
    transform: translate(30px, -50%);
  }
</style>

<script>
  function startAnimation() {
    const container = document.querySelector('.animation-container');
    if (!container) return;

    const letters = container.querySelectorAll('.letter');
    if (!letters.length) return;

    // Fáze 1: D a F jsou již zobrazeny (v CSS)

    // Fáze 2: Posun D nahoru a F dolů
    setTimeout(() => {
      const letterD = document.getElementById('D');
      const letterF = document.getElementById('F');
      if (letterD) letterD.style.transform = 'translate(-30px, -75%)';
      if (letterF) letterF.style.transform = 'translate(30px, -25%)';
    }, 1000);

    // Fáze 3: Posun D na 1,1 a F na 2,2
    setTimeout(() => {
      const letterD = document.getElementById('D');
      const letterF = document.getElementById('F');
      if (letterD) {
        letterD.style.left = '0';
        letterD.style.top = '0';
        letterD.style.transform = 'none';
      }
      if (letterF) {
        letterF.style.left = '100px';
        letterF.style.top = '100px';
        letterF.style.transform = 'none';
      }
    }, 2000);

    // Fáze 4: Zobrazení ostatních písmen
    const topRowLetters = ['I', 'G', 'I2', 'T', 'A', 'L'];
    const bottomRowLetters = ['U', 'S', 'I3', 'O', 'N'];

    setTimeout(() => {
      topRowLetters.forEach((id, index) => {
        setTimeout(() => {
          const letter = document.getElementById(id);
          if (letter) {
            letter.style.opacity = '1';
            letter.style.left = `${(index + 1) * 100}px`;
            letter.style.top = '0';
          }
        }, index * 300);
      });

      setTimeout(() => {
        bottomRowLetters.forEach((id, index) => {
          setTimeout(() => {
            const letter = document.getElementById(id);
            if (letter) {
              letter.style.opacity = '1';
              letter.style.left = `${(index + 2) * 100}px`;
              letter.style.top = '100px';
            }
          }, index * 300);
        });
      }, topRowLetters.length * 300);
    }, 3000);
  }

  // Spustit animaci po načtení stránky
  document.addEventListener('DOMContentLoaded', startAnimation);
</script>