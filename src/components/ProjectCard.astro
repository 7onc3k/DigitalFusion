---
import Button from './Button.astro';
import { Icon } from 'astro-icon/components';
interface Props {
    id: string;
    title: string;
    description: string;
    image: string;
    category: string;
    technologies: string[];
}
const { id, title, description, image, category, technologies } = Astro.props;
// Mapování technologií na ikony
const techIcons: { [key: string]: string } = {
    "HTML": "mdi:language-html5",
    "CSS": "mdi:language-css3",
    "JavaScript": "mdi:language-javascript",
    "React": "mdi:react",
    "Node.js": "mdi:nodejs",
    "Python": "mdi:language-python",
    // Přidejte další technologie a jejich ikony podle potřeby
};
---
<div class="project-card rounded-3xl overflow-hidden flex flex-col backdrop-blur-md bg-white/10 transition-all duration-300 hover:bg-white/20 h-full" data-category={category}>
    <img src={image} alt={title} class="w-full h-48 object-cover" />
    <div class="flex flex-col flex-grow p-6">
        <h2 class="text-xl font-bold mb-2 text-white">{title}</h2>
        <p class="text-white mb-4 flex-grow">{description}</p>
        <div class="technologies flex flex-wrap mb-4">
            {technologies.map(tech => (
                <span class="tech-icon mr-2 mb-2 text-xl text-white" title={tech}>
                    <Icon name={techIcons[tech] || "mdi:code-tags"} />
                </span>
            ))}
        </div>
        <div class="mt-auto">
            <Button href={`/portfolio/${id}`} class="w-full">Zobrazit detaily</Button>
        </div>
    </div>
</div>