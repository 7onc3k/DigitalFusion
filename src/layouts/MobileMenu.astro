<div class="md:hidden">
    <button id="mobile-menu-toggle" class="text-white focus:outline-none relative z-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 transform transition-transform duration-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
    </button>
    <div id="mobile-menu-content" class="absolute left-0 right-0 overflow-hidden transition-all duration-300 ease-in-out rounded-b-3xl" style="top: 100%; max-height: 0;">
        <nav class="text-center py-4 px-6">
            <ul>
                <li class="my-3"><a href="/" class="text-white text-xl hover:text-blue-300 transition-colors duration-300">Domů</a></li>
                <li class="my-3"><a href="/o-nas" class="text-white text-xl hover:text-blue-300 transition-colors duration-300">O nás</a></li>
                <li class="my-3"><a href="/sluzby" class="text-white text-xl hover:text-blue-300 transition-colors duration-300">Služby</a></li>
                <li class="my-3"><a href="/portfolio" class="text-white text-xl hover:text-blue-300 transition-colors duration-300">Portfolio</a></li>
                <li class="my-3"><a href="/kontakt" class="text-white text-xl hover:text-blue-300 transition-colors duration-300">Kontakt</a></li>
            </ul>
        </nav>
    </div>
</div>
<script>
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenuContent = document.getElementById('mobile-menu-content');
    const header = document.getElementById('main-header');
    const arrowIcon = mobileMenuToggle?.querySelector('svg');
    let isOpen = false;
    function toggleMenu() {
        isOpen = !isOpen;
        if (mobileMenuContent && header) {
            if (isOpen) {
                mobileMenuContent.style.maxHeight = `${mobileMenuContent.scrollHeight}px`;
                header.classList.add('menu-open');
                arrowIcon?.classList.add('rotate-180');
            } else {
                mobileMenuContent.style.maxHeight = '0';
                header.classList.remove('menu-open');
                arrowIcon?.classList.remove('rotate-180');
            }
        }
    }
    if (mobileMenuToggle) {
        mobileMenuToggle.addEventListener('click', toggleMenu);
    }
</script>