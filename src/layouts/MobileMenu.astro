<div class="md:hidden fixed top-8 right-6 z-50">
  <button id="mobile-menu-toggle" class="text-white bg-black bg-opacity-50 rounded-full p-2 focus:outline-none relative z-50">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 transform transition-transform duration-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </button>
  <div id="mobile-menu-container" class="fixed top-0 right-0 w-full max-w-sm bg-white text-black overflow-hidden transition-all duration-500 ease-in-out">
    <div id="mobile-menu-content" class="py-4 px-6">
      <nav class="text-center">
        <ul>
          <li class="my-3"><a href="/" class="text-black text-xl hover:text-gray-600 transition-colors duration-300">Domů</a></li>
          <li class="my-3"><a href="/o-nas" class="text-black text-xl hover:text-gray-600 transition-colors duration-300">O nás</a></li>
          <li class="my-3"><a href="/sluzby" class="text-black text-xl hover:text-gray-600 transition-colors duration-300">Služby</a></li>
          <li class="my-3"><a href="/portfolio" class="text-black text-xl hover:text-gray-600 transition-colors duration-300">Portfolio</a></li>
          <li class="my-3"><a href="/kontakt" class="text-black text-xl hover:text-gray-600 transition-colors duration-300">Kontakt</a></li>
        </ul>
      </nav>
    </div>
  </div>
</div>
<style>
  #mobile-menu-container {
    height: 0;
    transition: height 0.5s ease-in-out;
  }
  #mobile-menu-container.open {
    height: 100vh;
  }
  #mobile-menu-toggle {
    transition: background-color 0.3s ease-in-out;
  }
  #mobile-menu-toggle:hover {
    background-color: rgba(0, 0, 0, 0.7);
  }
</style>
<script>
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenuContainer = document.getElementById('mobile-menu-container');
  const arrowIcon = mobileMenuToggle?.querySelector('svg');
  let isOpen = false;
  function toggleMenu() {
    isOpen = !isOpen;
    if (mobileMenuContainer && arrowIcon) {
      if (isOpen) {
        mobileMenuContainer.classList.add('open');
        arrowIcon.classList.add('rotate-180');
        // Plynulé rozšíření pozadí
        const contentHeight = mobileMenuContainer.scrollHeight;
        mobileMenuContainer.style.height = `${contentHeight}px`;
      } else {
        arrowIcon.classList.remove('rotate-180');
        // Plynulé zmenšení pozadí
        mobileMenuContainer.style.height = '0';
        // Odstranění třídy 'open' po animaci
        setTimeout(() => {
          mobileMenuContainer.classList.remove('open');
        }, 500);
      }
    }
  }
  if (mobileMenuToggle) {
    mobileMenuToggle.addEventListener('click', toggleMenu);
  }
</script>