<header class="fixed top-0 left-0 right-0 z-50 bg-transparent text-white pt-8 md:pt-12">
    <nav class="container mx-auto flex justify-between items-center px-6">
        <div class="logo text-2xl md:text-3xl font-bold tracking-wider">DigitalFusion</div>
        <div class="md:hidden">
            <button id="mobile-menu-toggle" class="text-white focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="3" y1="12" x2="21" y2="12"></line>
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <line x1="3" y1="18" x2="21" y2="18"></line>
                </svg>
            </button>
        </div>
        <ul id="nav-links" class="nav-links hidden md:flex md:items-center absolute md:relative top-full left-0 w-full md:w-auto bg-gray-800 md:bg-transparent">
            <li class="mx-3 py-2 md:py-0"><a href="/" class="block md:inline-block hover:text-blue-300 transition-colors duration-300 text-sm uppercase tracking-wider">Domů</a></li>
            <li class="mx-3 py-2 md:py-0"><a href="/o-nas" class="block md:inline-block hover:text-blue-300 transition-colors duration-300 text-sm uppercase tracking-wider">O nás</a></li>
            <li class="mx-3 py-2 md:py-0"><a href="/sluzby" class="block md:inline-block hover:text-blue-300 transition-colors duration-300 text-sm uppercase tracking-wider">Služby</a></li>
            <li class="mx-3 py-2 md:py-0"><a href="/portfolio" class="block md:inline-block hover:text-blue-300 transition-colors duration-300 text-sm uppercase tracking-wider">Portfolio</a></li>
            <li class="mx-3 py-2 md:py-0"><a href="/reference" class="block md:inline-block hover:text-blue-300 transition-colors duration-300 text-sm uppercase tracking-wider">Reference</a></li>
            <li class="mx-3 py-2 md:py-0"><a href="/blog" class="block md:inline-block hover:text-blue-300 transition-colors duration-300 text-sm uppercase tracking-wider">Blog</a></li>
            <li class="mx-3 py-2 md:py-0"><a href="/kontakt" class="block md:inline-block hover:text-blue-300 transition-colors duration-300 text-sm uppercase tracking-wider">Kontakt</a></li>
        </ul>
    </nav>
</header>
<script>
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const navLinks = document.getElementById('nav-links');
    let isOpen = false;
    if (mobileMenuToggle && navLinks) {
        mobileMenuToggle.addEventListener('click', () => {
            isOpen = !isOpen;
            if (isOpen) {
                navLinks.classList.remove('hidden');
                navLinks.classList.add('animate-slide-in');
                mobileMenuToggle.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                `;
            } else {
                navLinks.classList.remove('animate-slide-in');
                navLinks.classList.add('animate-slide-out');
                setTimeout(() => {
                    navLinks.classList.add('hidden');
                    navLinks.classList.remove('animate-slide-out');
                }, 300);
                mobileMenuToggle.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="3" y1="12" x2="21" y2="12"></line>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <line x1="3" y1="18" x2="21" y2="18"></line>
                    </svg>
                `;
            }
        });
    }
</script>
<style>
    @keyframes slideIn {
        from { transform: translateX(-100%); }
        to { transform: translateX(0); }
    }
    @keyframes slideOut {
        from { transform: translateX(0); }
        to { transform: translateX(-100%); }
    }
    .animate-slide-in {
        animation: slideIn 0.3s ease-out forwards;
    }
    .animate-slide-out {
        animation: slideOut 0.3s ease-in forwards;
    }
    @media (max-width: 768px) {
        .nav-links {
            top: 100%;
            left: 0;
            right: 0;
            position: absolute;
            background-color: rgba(31, 41, 55, 0.95);
            padding: 1rem;
        }
    }
</style>