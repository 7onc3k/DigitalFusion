---
import Particles from "./Particles.astro";
import type { ISourceOptions } from "@tsparticles/engine";

interface Props {
    title: string;
}

const { title } = Astro.props;

const particlesOptions: ISourceOptions = {
    background: {
        color: "#000000"
    },
    fullScreen: {
        enable: true,
        zIndex: -1
    },
    particles: {
        number: {
            value: 80,
            density: {
                enable: true,
                  // Changed to valueArea
            }
        },
        color: {
            value: "#ffffff"
        },
        shape: {
            type: "circle"
        },
        opacity: {
            value: 0.5,
            animation: {  // Changed to animation
                enable: false,
                speed: 1,
                  // Changed to minimumValue
                sync: false
            }
        },
        size: {
            value: 3,
            animation: {  // Changed to animation
                enable: false,
                speed: 40,
                  // Changed to minimumValue
                sync: false
            }
        },
        links: {  // Changed from line_linked to links
            enable: true,
            distance: 150,
            color: "#ffffff",
            opacity: 0.4,
            width: 1
        },
        move: {
            enable: true,
            speed: 6,
            direction: "none",
            outModes: "out",  // Changed from out_mode to outModes
            attract: {
                enable: false,
                rotate: {  // Changed from rotateX and rotateY to rotate object
                    x: 600,
                    y: 1200
                }
            }
        }
    },
    interactivity: {
        detectsOn: "canvas",  // Changed from detect_on to detectsOn
        events: {
            onHover: {  // Changed from onhover to onHover
                enable: true,
                mode: "repulse"
            },
            onClick: {  // Changed from onclick to onClick
                enable: true,
                mode: "push"
            },
            resize: {  // Changed from boolean to object
                enable: true,
                delay: 0.5
            }
        },
        modes: {
            grab: {
                distance: 400,
                links: {  // Changed from line_linked to links
                    opacity: 1
                }
            },
            bubble: {
                distance: 400,
                size: 40,
                duration: 2,
                opacity: 8,
            },
            repulse: {
                distance: 200,
                duration: 0.4
            },
            push: {
                quantity: 4  // Changed from particles_nb to quantity
            },
            remove: {
                quantity: 2  // Changed from particles_nb to quantity
            }
        }
    },
    detectRetina: true  // Changed from retina_detect to detectRetina
};
---

<!doctype html>
<html lang="cs">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="DigitalFusion - Vaše digitální řešení" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="flex flex-col min-h-screen">
        <Particles id="tsparticles" options={particlesOptions} />
        <header class="sticky top-0 z-50 bg-gray-800 text-white">
            <nav class="container mx-auto flex justify-between items-center p-4">
                <div class="logo">DigitalFusion</div>
                <button class="mobile-menu-toggle md:hidden focus:outline-none">
                    <i class="fas fa-bars text-2xl"></i>
                </button>
                <ul class="nav-links hidden md:flex md:space-x-4 absolute md:relative top-full left-0 w-full md:w-auto bg-gray-800 md:bg-transparent">
                    <li><a href="/" class="block py-2 md:py-0 px-4 md:px-0 hover:underline">Domů</a></li>
                    <li><a href="/o-nas" class="block py-2 md:py-0 px-4 md:px-0 hover:underline">O nás</a></li>
                    <li><a href="/sluzby" class="block py-2 md:py-0 px-4 md:px-0 hover:underline">Služby</a></li>
                    <li><a href="/portfolio" class="block py-2 md:py-0 px-4 md:px-0 hover:underline">Portfolio</a></li>
                    <li><a href="/reference" class="block py-2 md:py-0 px-4 md:px-0 hover:underline">Reference</a></li>
                    <li><a href="/blog" class="block py-2 md:py-0 px-4 md:px-0 hover:underline">Blog</a></li>
                    <li><a href="/kontakt" class="block py-2 md:py-0 px-4 md:px-0 hover:underline mb-4">Kontakt</a></li>
                </ul>
            </nav>
        </header>
        <main class="flex-grow">
            <slot />
        </main>
        <footer class="bg-gray-800 text-white p-4">
            <div class="footer-content grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="footer-section">
                    <h3 class="text-lg font-bold">Rychlé odkazy</h3>
                    <ul>
                        <li><a href="/" class="hover:underline">Domů</a></li>
                        <li><a href="/o-nas" class="hover:underline">O nás</a></li>
                        <li><a href="/sluzby" class="hover:underline">Služby</a></li>
                        <li><a href="/kontakt" class="hover:underline">Kontakt</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3 class="text-lg font-bold">Sledujte nás</h3>
                    <div class="social-icons flex space-x-4">
                        <a href="#" class="social-icon">FB</a>
                        <a href="#" class="social-icon">IN</a>
                        <a href="#" class="social-icon">TW</a>
                    </div>
                </div>
                <div class="footer-section">
                    <h3 class="text-lg font-bold">Newsletter</h3>
                    <form class="newsletter-form flex flex-col space-y-2">
                        <input type="email" placeholder="Váš e-mail" required class="p-2 rounded border border-gray-300">
                        <button type="submit" class="p-2 bg-blue-500 text-white rounded">Odebírat</button>
                    </form>
                </div>
            </div>
            <div class="footer-bottom text-center mt-4">
                <p>&copy; 2023 DigitalFusion. Všechna práva vyhrazena.</p>
            </div>
        </footer>
        <script>
            const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
            const navLinks = document.querySelector('.nav-links');
            const menuIcon = mobileMenuToggle ? mobileMenuToggle.querySelector('i') : null;
            if (mobileMenuToggle && navLinks && menuIcon) {
                mobileMenuToggle.addEventListener('click', () => {
                    navLinks.classList.toggle('hidden');
                    navLinks.classList.toggle('flex');
                    navLinks.classList.toggle('flex-col');
                    navLinks.classList.toggle('items-center');
                    menuIcon.classList.toggle('fa-bars');
                    menuIcon.classList.toggle('fa-times');
                });
            } else {
                console.error('Nelze najít prvky mobilního menu, navigačních odkazů nebo ikonu menu');
            }
        </script>
    </body>
</html>