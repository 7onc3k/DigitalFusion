---
import Particles from "./Particles.astro";
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import particlesOptions from "../config/particlesOptions";
import { ViewTransitions } from 'astro:transitions';

interface Props {
    title: string;
    noTopPadding?: boolean;
}

const { title, noTopPadding = false } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content="Tvoříme moderní webová řešení zaměřená na výkon a prodej. Profesionální weby na míru vašemu businessu. Kontaktujte nás a posuňte své podnikání na další úroveň." />
        <meta name="keywords" content="DigitalFusion, Digital Fusion, digital, fusion, web development, web design, webové stránky, digitální marketing, branding" />
        <meta name="author" content="DigitalFusion" />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body class="flex flex-col min-h-screen bg-black text-white font-sans">
        <div class="absolute inset-0 z-0" transition:persist>
            <Particles id="tsparticles" options={particlesOptions} />
        </div>
        <div class="relative z-10 flex flex-col min-h-screen">
            <Header />
            <main class={`flex-grow container mx-auto px-4 ${noTopPadding ? 'pt-0' : 'pt-20'}`}>
                <slot />
            </main>
            <Footer />
        </div>
    </body>
</html>
